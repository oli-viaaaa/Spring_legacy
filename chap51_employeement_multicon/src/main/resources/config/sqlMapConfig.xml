<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE configuration
  PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-config.dtd">
  
<!-- MyBatis 설정 파일로 사용, Mapper의 ResultType에서 사용할 alias 설정-->
<configuration>
	<!-- mybatis cache disabled -->
	<settings> 
		<!-- 테이블의 컬럼명(role_id) Vo의 멤버변수(roleId) 매칭해주는 역할 -->
		<setting name="mapUnderscoreToCamelCase" value="true"/>
	</settings>

	<typeAliases>
		<typeAlias type="com.javalab.vo.UserVo" alias="User" />
		<typeAlias type="com.javalab.vo.BoardVO" alias="Board" />
		<typeAlias type="com.javalab.vo.RoleVo" alias="Role" />
		<typeAlias type="com.javalab.vo.Criteria" alias="Criteria" />
		<typeAlias type="com.javalab.vo.Employee" alias="Employee" />
		<typeAlias type="com.javalab.dto.EmployeeCommonDto" alias="EmployeeCommonDto" />
	</typeAliases>
		
</configuration>